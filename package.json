{
  "name": "macos-mcp",
  "version": "1.0.0",
  "description": "Unified MCP server for macOS Calendar, Reminders, and Notes",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "macos-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:swift": "./scripts/build-swift.sh",
    "build:all": "npm run build:swift && npm run build",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "macos",
    "calendar",
    "reminders",
    "notes",
    "eventkit",
    "apple"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
